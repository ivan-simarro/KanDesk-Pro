#!/bin/sh

OS=$(uname)

if [ "$OS" = "Linux" ] || [ "$OS" = "Darwin" ]; then
  echo "ğŸ›‘ Detected Unix-like OS ($OS)"
  ./shutdown.sh
elif echo "$OS" | grep -qiE "MINGW|CYGWIN|MSYS"; then
  echo "ğŸ›‘ Detected Windows-like shell ($OS)"
  ./shutdown.bat
else
  echo "âŒ Unsupported OS: $OS"
  exit 1
fi